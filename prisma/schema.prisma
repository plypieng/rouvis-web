// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Datasource: Specifies your database connection.
// We're using PostgreSQL. The URL is loaded from the .env file.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Generator: Specifies that you want to generate Prisma Client.
generator client {
  provider = "prisma-client-js"
}

// 3. NextAuth.js Models: These are required for the Prisma adapter.

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?  @db.Text
  expires_at        Int?
  refresh_token_expires_in Int?
  token_type        String?
  scope             String?  @db.Text
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // Custom fields
  chatSessions  ChatSession[]
  projects      Project[]
  fields        Field[]
  userProfile   UserProfile?
  accountDataRequests AccountDataRequest[]
  auditEvents   AuditEvent[]
}

model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Identity & Location
  displayName       String?
  region            String?  // e.g. "Niigata"
  city              String?  // e.g. "Uonuma"
  latitude          Float?
  longitude         Float?
  
  // Farming Context
  farmingType       String   @default("conventional") // organic, conventional, etc.
  experienceLevel   String   @default("intermediate") // beginner, intermediate, expert
  
  // AI Preferences
  communicationStyle String  @default("friendly") // professional, friendly, mentor
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 4. Custom Application Models

model ChatMessage {
  id        String   @id @default(cuid())
  role      String // "user" or "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())

  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model Project {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String
  crop              String
  variety           String?
  fieldId           String?
  startDate         DateTime
  targetHarvestDate DateTime?
  notes             String?
  status            String    @default("active") // active, on-hold, completed, archived
  archivedAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  tasks      Task[]
  activities Activity[]
  chatSessions ChatSession[]
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime
  status      String    @default("pending") // pending, scheduled, completed, cancelled
  priority    String    @default("medium") // low, medium, high
  isBackfilled Boolean  @default(false)
  isAssumed    Boolean  @default(false)
  idempotencyKey String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  fieldId   String?

  @@index([projectId])
  @@index([dueDate])
  @@unique([projectId, idempotencyKey])
}

model Activity {
  id          String   @id @default(cuid())
  type        String   // watering, fertilizer, harvest, inspection, maintenance
  qty         Float?
  unit        String?
  note        String?
  performedAt DateTime @default(now())
  idempotencyKey String?
  createdAt   DateTime @default(now())

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  fieldId   String?

  @@index([projectId])
  @@unique([projectId, idempotencyKey])
}

model Field {
  id        String   @id @default(cuid())
  name      String
  area      Float    // in square meters
  crop      String?
  polygon   Json?    // GeoJSON or array of coordinates
  location  Json?    // Center point {lat, lng}
  color     String?  // Hex color code for visualization
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ChatSession {
  id        String   @id @default(cuid())
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  messages  ChatMessage[]

  @@index([userId])
  @@index([projectId])
}

model CropKnowledge {
  id          String   @id @default(cuid())
  cropName    String
  variety     String   @default("") // Specific variety (e.g., "Momotaro")
  region      String   @default("") // Region (e.g., "Niigata")
  stages      Json     // Array of { name, duration, description }
  pests       Json?    // Array of common pests
  tips        Json?    // General cultivation tips
  source      String?  // e.g., "AI-Tavily", "User-Correction"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([cropName, variety, region])
}

model AdviceCache {
  key       String   @id
  advice    Json
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum AccountDataRequestType {
  EXPORT
  DELETE
}

enum AccountDataRequestStatus {
  PENDING
  PROCESSING
  COMPLETED
  REJECTED
  CANCELED
}

model AccountDataRequest {
  id              String                   @id @default(cuid())
  userId          String
  user            User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            AccountDataRequestType
  status          AccountDataRequestStatus @default(PENDING)
  requestedAt     DateTime                 @default(now())
  processedAt     DateTime?
  completedAt     DateTime?
  canceledAt      DateTime?
  reason          String?
  idempotencyKey  String?
  resultUrl       String?
  resultExpiresAt DateTime?
  metadata        Json?
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt

  @@unique([userId, idempotencyKey])
  @@index([userId, createdAt])
  @@index([userId, type, status])
  @@index([status, requestedAt])
}

model AuditEvent {
  id           String   @id @default(cuid())
  userId       String?
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action       String
  status       String   @default("SUCCESS")
  resourceType String?
  resourceId   String?
  requestId    String?
  metadata     Json?
  createdAt    DateTime @default(now())

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([requestId])
}

model CropPerformanceLog {
  id          String   @id @default(cuid())
  projectId   String
  cropName    String
  variety     String
  region      String
  year        Int
  yield       Float
  rating      Int
  notes       String?
  createdAt   DateTime @default(now())

  @@index([projectId])                 // For personal analysis
}

model UserCropOverride {
  id          String   @id @default(cuid())
  userId      String
  cropName    String
  variety     String?
  stage       String
  durationAdjustment Int // e.g., +5 days
  
  @@unique([userId, cropName, variety, stage])
}

model ProductKnowledge {
  id                 String   @id @default(cuid())
  name               String   // e.g., "Starkle Mate Water Soluble Granules"
  type               String   // e.g., "insecticide", "fungicide"
  activeIngredients  String[] // e.g., ["Dinotefuran"]
  targets            String[] // e.g., ["aphid", "stink_bug"]
  crops              String[] // e.g., ["rice", "vegetables"]
  usage              Json     // { "dilution": "2000x", "timing": "pre-harvest", "safetyInterval": 7 }
  registrationNumber String   // e.g., "21345"
  manufacturer       String?
  
  // Enriched Data (Living KB)
  imageUrl           String?  // URL to product image
  marketPrice        Int?     // Approximate price in JPY
  commonNames        String[] // e.g., ["Starkle", "Pink Bottle"]
  efficacyScore      Float    @default(0) // 0-5 rating based on user feedback
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([type])
}
